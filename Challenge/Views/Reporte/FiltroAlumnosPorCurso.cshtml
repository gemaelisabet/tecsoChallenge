@model Challenge.Models.FiltroReporteAlumnosPorCurso
@{
    ViewBag.Title = "Reporte de Alumnos por Curso";
}

<h2>Reporte de Alumnos por Curso</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">
    <br />
    <hr />

    <div class="form-group">
        @Html.Label("Curso", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.DropDownList("CursoID", null, String.Empty, htmlAttributes: new { @class = "form-control" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Generar Reporte en Excel" class="btn btn-default" />
        </div>
    </div>

</div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}



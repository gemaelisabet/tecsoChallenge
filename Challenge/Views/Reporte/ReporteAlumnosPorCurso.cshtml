@{
    Layout = null;
}

<style type="text/css">
    td.est_demorada, td.dd_vencida {
        background-color: #ff0000;
        color: white;
    }

    td.est_completa, td.dd_ok {
        background-color: #00b050;
        color: white;
    }

    td.est_en_curso {
        background-color: #ffff00;
        color: black;
    }

    td.dd_sin_fecha {
        background-color: #eeeeee;
        color: black;
    }
</style>

@*@if (ViewBag.Tabla == "SolicitudPedido")
    {
        @Html.Partial("_SolpedExport")
    }*@

<div class="row">
    <div class="table-responsive">
        <table class="table table-striped table-bordered dataTable">
            <tr>
                <th class="text-center">
                    Nombre del Alumno
                </th>
                <th class="text-center">
                    Estado en el Curso
                </th>
               
            </tr>

            @foreach (var item in ViewBag.Documentos)
            {
                <tr class="text-center">
                    <td>
                        @item.Alumno.Apellido,  @item.Alumno.Nombre
                    </td>
                    <td>
                        @item.EstadoCursada
                    </td>
                </tr>
            }

        </table>
    </div>
</div>

